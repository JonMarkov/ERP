page {
  width: 100%;
  background: #f1f1f3;
}

.refer {
  margin-top: 20rpx;
  width: 92%;
  background: #fff;
  border-radius: 15rpx;
  text-align: center;
  margin: 20rpx auto;
  padding-bottom: 5rpx;
}

.refer_title {
  background: #8ebaf7;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  height: 2rem;
  display: flex;
  align-items: center;
  padding: 0rpx 20rpx;
}

.refer_title text {
  color: #fff;
  font-size: 26rpx;
}

.content {
  padding: 10rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
}

.content_left {
  padding: 30rpx 20rpx;
  line-height: 50rpx;
  width: 60%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  text-align: left;
  border-right: 2rpx solid #ddd;
}

.content_left text {
  font-size: 26rpx;
}

.content_right {
  width: 40%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.launch_list {
  padding: 10rpx 20rpx;
  background: #fff;
  position: relative;
  top: 0rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 26rpx;
  align-items: center;
}

.launch_list image {
  width: 20rpx;
  height: 20rpx;
}

.list_left {
  display: flex;
  flex-direction: row;
}

.left_img {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.list_right {
  display: flex;
  flex-direction: row;
}
