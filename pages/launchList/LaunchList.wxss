page {
  width: 100%;
  background: #f1f1f3;
}

.refer {
  margin-top: 20rpx;
  width: 92%;
  background: #fff;
  border-radius: 15rpx;
  text-align: center;
  margin: 20rpx auto;
  padding-bottom: 5rpx;
}

.refer_title {
  background: #8ebaf7;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  height: 2rem;
  display: flex;
  align-items: center;
  padding: 0rpx 20rpx;
}

.refer_title text {
  color: #fff;
  font-size: 26rpx;
}

.content {
  padding: 10rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
}

.content_left {
  padding: 30rpx 20rpx;
  line-height: 50rpx;
  width: 60%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  text-align: left;
  border-right: 2rpx solid #ddd;
}

.content_left text {
  font-size: 20rpx;
}

.content_right {
  width: 40%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.launch_list {
  padding: 10rpx 20rpx;
  background: #fff;
  position: relative;
  top: 0rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 26rpx;
  align-items: center;
}

.launch_list image {
  width: 29rpx;
  height: 15rpx;
}

.list_left {
  display: flex;
  flex-direction: row;
}

.right_img {
  margin-left: 5rpx;
}

.left_img {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-left: 5rpx;
}

.list_right {
  display: flex;
  flex-direction: row;
}

/* 遮罩层 */

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.5;
}

/* 弹出层 */

.modalDlg {
  width: 92%;
  position: fixed;
  top: 50px;
  left: 0;
  right: 0;
  z-index: 9999;
  margin: 0 auto;
  background-color: #fff;
  border-radius: 5px;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 24rpx;
}

/* 弹出层里面的图片 */

.modalDlg image {
  width: 120px;
  height: 120px;
  margin-top: 30px;
}

/* 弹出层里面的按钮 */

.ok {
  width: 80px;
  height: 35px;
  background: #8ebaf7;
  line-height: 35px;
  text-align: center;
  color: #fff;
  font-size: 15px;
  margin: 20px auto;
  border-radius: 10px;
}

/* 弹出层里面的文字 */

.text {
  text-align: justify;
  font-size: 14px;
  color: #666;
  width: 180px;
  margin-top: 10px;
}

.mask_one {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 90%;
  padding: 20rpx;
}

.mask_text {
  border: 1rpx solid #8ebaf7;
  /* padding: 10rpx 60rpx; */
  color: #8ebaf7;
  border-radius: 10rpx;
  font-size: 26rpx;
  width: 120rpx;
  text-align: center;
}

.mask_text_sel {
  border: 1rpx solid #8ebaf7;
  /* padding: 10rpx 60rpx; */
  color: #fff;
  border-radius: 10rpx;
  font-size: 26rpx;
  background: #8ebaf7;
  width: 120rpx;
  text-align: center;
}
